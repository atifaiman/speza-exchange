/* ----------------------------------------------------------- */
/*          REVAMPED BANNER ADJUSTMENT (STANDARDISED)          */
/* ----------------------------------------------------------- */
.carousel-slider-container {
    width: 100vw;
    overflow: hidden;
    a {
        text-decoration: none;
    }
}

.carousel-slider-container p {
    margin: 0;
    padding: 0;
}

.carousel-banner-container {
    width: 100vw;
    height: 400px;
    overflow: hidden;
    color: white;
}
.carousel-banner-background {
    width: inherit;
    height: inherit;
    overflow: hidden;
    background-repeat: no-repeat !important;
    background-size: cover !important;
    background-position: center !important;
}
.carousel-banner-overlay {
    width: inherit;
    height: inherit;
    position: relative;
    top: -400px;
    overflow: hidden;
    background-repeat: no-repeat !important;
    background-size: cover !important;
    background-position: center !important;
}
.carousel-banner-background-new {
    width: inherit;
    height: inherit;
    overflow: hidden;
    background-repeat: no-repeat;
    background-size: cover !important;
    background-position: center !important;
}
.carousel-banner-slider-new {
    width: inherit;
    height: inherit;
    max-width: 1200px;
    overflow: hidden;
    background-repeat: no-repeat;
    background-size: cover !important;
    background-position: center !important;
    position: relative;
    top: -400px;
    margin: auto;
}
.carousel-banner-overlay-new {
    width: inherit;
    height: inherit;
    overflow: hidden;
    background-repeat: no-repeat;
    background-size: cover !important;
    background-position: center !important;
    position: relative;
    top: -800px;
    display: -webkit-flex;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    .overlay-left {
        width: 400px;
        height: 400px;
    }
    .overlay-right {
        width: 400px;
        height: 400px;
    }
}
.carousel-content-body-new {
    width: 100%;
    max-width: 1200px;
    height: inherit;
    position: relative;
    top: -1200px;
    box-sizing: border-box;
    overflow: hidden;
    margin: auto;
    display: flex;
    display: -webkit-flex;
    flex-flow: column wrap;
    justify-content: center;
    align-items: stretch;
    box-sizing: border-box;
    padding: 25px 0;
}
.carousel-content-body {
    width: 100%;
    max-width: 1200px;
    height: inherit;
    position: relative;
    top: -800px;
    box-sizing: border-box;
    overflow: hidden;
    margin: auto;
    display: flex;
    display: -webkit-flex;
    flex-flow: column wrap;
    justify-content: center;
    align-items: stretch;
    box-sizing: border-box;
    padding: 20px 0;
}
.carousel-content-row-1, .carousel-content-row-3 {
    width: 100%;
    height: 20px;
    display: flex;
    display: -webkit-flex;
    justify-content: center;
    align-items: center;
    font-size: 12px;
    font-style: italic;
}
.carousel-content-row-2 {
    width: 100%;
    height: 310px;
    display: flex;
    display: -webkit-flex;
    justify-content: space-between;
    box-sizing: border-box;
    padding-bottom: 35px;
    line-height: 2;
    .text-regular-zh {
        span {
            font-weight: 400 !important;
        }
    }
    .text-light {
        span {
            font-size: 24px;
            font-weight: 300;
            font-style: italic;
            margin: 0 !important;
            padding: 0 !important;
        }
    }
    .text-bold {
        font-size: 44px;
        font-weight: 700;
        font-style: italic;
        text-shadow: 0px 0px 5px #A372EA;
        margin-top: 100px !important;
    }

    @media only screen and (max-width: 1280px) {
        .text-light {
            span {
                font-size: 22px;
            }
        }
        .text-bold {
            font-size: 42px;
        }
    }
    @media only screen and (max-width: 960px) {
        .text-light {
            span {
                font-size: 20px;
            }
        }
        .text-bold {
            font-size: 38px;
        }
    }
    @media only screen and (max-width: 768px) {
        line-height: 1.5;
        .text-light {
            span {
                font-size: 16px;
            }
        }
        .text-bold {
            font-size: 25px;
        }
    }
    @media only screen and (max-width: 500px) {
        line-height: 1.3;
        .text-light {
            span {
                font-size: 12px;
            }
        }
        .text-bold {
            font-size: 18px;
        }
    }
}
.carousel-content-col-1, .carousel-content-col-2 {
    display: flex;
    display: -webkit-flex;
    flex-flow: column wrap;
    justify-content: flex-end;
}
.carousel-content-col-1 {
    flex-basis: 50%;
    align-items: flex-start;
    text-align: left;
}
.carousel-content-col-2 {
    flex-basis: 48%;
    align-items: flex-end;
    text-align: right;
    box-sizing: border-box;
}

.carousel-content-col-2 p {
    margin-bottom: 0px;
}

.carousel-button {
    width: 180px;
    height: 45px;
    display: flex;
    display: -webkit-flex;
    justify-content: center;
    align-items: center;
    color: white;
    font-size: 16px !important;
    font-weight: 700 !important;
    font-style: normal !important;
    text-decoration: none;
    cursor: pointer;
    margin-top: 40px;
    background: linear-gradient(90.1deg, #BE55AD 0%, #543D8F 100.04%);
    @media only screen and (max-width: 768px) {
        width: 130px;
        height: 40px;
        margin-top: 20px;
    }
    @media only screen and (max-width: 430px) {
        font-size: 14px !important;
    }
}

.carousel-logo {
    background-size: contain !important;
    background-repeat: no-repeat !important;
}

.slick-dots {
    position: relative;
    width: 80% !important;
    bottom: 8px;
    margin: auto !important;
    display: flex !important;
    display: -webkit-flex;
    padding: auto;
    justify-content: center;
}

.carousel-thumb-hover {
    width: 100%;
    height: 12px;
    position: absolute;
    opacity: .85;
    background-color: #A335BF;
    border-radius: 10px;
    box-shadow: inset 0 0 2px #fff;
}

.carousel-thumb-hover:hover {
    background-color: rgb(197, 101, 221);
    border-top-right-radius: 0;
    border-top-left-radius: 0;
}

.carousel-thumb-hover:hover ~ .carousel-thumb {
    background-size: cover;
    background-position: center;
    height: 80px;
    width: 100%;
    position: relative;
    top: -99px;
    opacity: 1;
    filter: brightness(150%);
    box-shadow: none;
    border-radius: 2px;
    animation-name: image-slide-down;
    animation-duration: .2s;
    animation-timing-function: ease-out;
}

.carousel-thumb:hover {
    background-size: cover;
    background-position: center;
    height: 80px;
    width: 100%;
    position: relative;
    top: -99px;
    opacity: 1;
    filter: brightness(150%);
    border-top-right-radius: 0;
    border-top-left-radius: 0;
    animation-name: sharpen-top-border;
    animation-duration: 1s;
    animation-timing-function: ease-in-out;
    -webkit-animation-name: sharpen-top-border;
    -webkit-animation-duration: 1s;
    -webkit-animation-timing-function: ease-in-out;
}

@keyframes image-slide-down {
    from {
        opacity: 0;
        top: -140px;
    }
    to {
        opacity: 1;
        top: -99px;
    }
}

@keyframes sharpen-top-border {
    from {
        border-top-right-radius: 2px;
        border-top-left-radius: 2px;
    }
    to {
        border-top-right-radius: 0;
        border-top-left-radius: 0;
    }
}

@keyframes text-slide-down {
    from {
        top: -10px;
    }
    to {
        top: 0;
    }
}

