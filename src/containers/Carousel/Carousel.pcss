    .slick-dots > li {
        width: 120px !important;
    }
    .carousel-thumb-hover {
        height: 16px;
        top: -20px;
    }
}

@media only screen and (max-width: 1600px) {
    .slick-dots > li {
        width: 100px !important;
    }
    .carousel-thumb-hover {
        height: 14px;
        top: -19px;
    }
}

@media only screen and (max-width: 1200px) {
